var slots_count = 6
var new_spawner = null

func _ready():
	var i = 0
	var window_size = get_viewport().size
	while i < slots_count:
		i += 1
		var spawner = load(\"res://Scenes/LocationObjectSpawner.tscn\").instance()
		add_child(spawner)
		var sp_sprite = spawner.get_node(\"Sprite\")
		var sp_width = sp_sprite.texture.get_width() * sp_sprite.get_scale().x
		spawner.position.x = (window_size.x - get_x_with_gap(slots_count + 1, sp_width)) / 2 + get_x_with_gap(i, sp_width)
		spawner.position.y = window_size.y / 2
	var location = load(\"res://Scenes/LocationObjectCards/LocationHolder.tscn\").instance()
	add_child(location)
	location.position.x = window_size.x/2
	location.position.y = window_size.y/2 - 176
	


func get_x_with_gap(count, width, gap=11): return (count * width + (count - 1) * gap)
